{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@utils/*": ["src/utils/*"],
      "@shared/*": ["src/shared/*"],
      "@guards/*": ["src/guards/*"],
      "@models/*": ["src/models/*"],
      "@decorators/*": ["src/decorators/*"]
    }
  },
  "exclude": ["node_modules", "dist", "uploads"]
}
